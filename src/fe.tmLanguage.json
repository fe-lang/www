{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Fe",
  "scopeName": "source.fe",
  "patterns": [
    { "include": "#comments" },
    { "include": "#attributes" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.fe",
          "match": "//.*$"
        },
        {
          "name": "comment.block.fe",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.fe",
          "begin": "#\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": { "name": "punctuation.definition.attribute.fe" }
          },
          "endCaptures": {
            "0": { "name": "punctuation.definition.attribute.fe" }
          },
          "patterns": [
            {
              "name": "entity.name.attribute.fe",
              "match": "\\b(selector|indexed)\\b"
            },
            { "include": "#numbers" },
            { "include": "#operators" }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.fe",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.fe",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.fe",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.decimal.fe",
          "match": "\\b[0-9][0-9_]*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.fe",
          "match": "\\b(if|else|match|for|while|loop|break|continue|return|in)\\b"
        },
        {
          "name": "keyword.declaration.fe",
          "match": "\\b(const|let|mut|fn|struct|enum|trait|impl|type|contract|msg|pub|extern|ingot|mod)\\b"
        },
        {
          "name": "keyword.effect.fe",
          "match": "\\b(uses|with)\\b"
        },
        {
          "name": "keyword.contract.fe",
          "match": "\\b(init|recv)\\b"
        },
        {
          "name": "constant.language.fe",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "variable.language.fe",
          "match": "\\b(self|Self)\\b"
        },
        {
          "name": "keyword.other.fe",
          "match": "\\b(assert|revert|todo)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.fe",
          "match": "\\b(u8|u16|u32|u64|u128|u256|i8|i16|i32|i64|i128|i256|bool)\\b"
        },
        {
          "name": "storage.type.builtin.fe",
          "match": "\\b(Address|String|Map|Option|Ctx|Log)\\b"
        },
        {
          "name": "entity.name.type.fe",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.fe",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.fe",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.fe",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.fe",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.assignment.fe",
          "match": "(\\+=|-=|\\*=|/=|%=|=)"
        },
        {
          "name": "keyword.operator.arrow.fe",
          "match": "->"
        },
        {
          "name": "keyword.operator.access.fe",
          "match": "::"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.fe",
          "match": "[,;]"
        },
        {
          "name": "punctuation.brackets.fe",
          "match": "[\\[\\]\\(\\)\\{\\}]"
        },
        {
          "name": "punctuation.accessor.fe",
          "match": "\\."
        },
        {
          "name": "punctuation.colon.fe",
          "match": ":"
        }
      ]
    }
  }
}
